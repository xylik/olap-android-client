<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLyt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeightMedium"
    android:orientation="vertical"
    android:padding="@dimen/dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/marginExtraSmall"
        android:paddingLeft="@dimen/paddingMedium"
        android:layout_toLeftOf="@+id/removeItemImg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entityTitleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Year level"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText" />

        <TextView
            android:id="@+id/entityDescLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Time hierarchy"
            android:textColor="@color/black"
            android:textSize="@dimen/smallText"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/removeItemImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginSmall"
        android:padding="@dimen/paddingExtraSmall"
        android:src="@drawable/delete_icon"
        android:background="@drawable/btnbgd_none" />

</RelativeLayout>