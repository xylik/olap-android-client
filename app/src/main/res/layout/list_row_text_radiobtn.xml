<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLyt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeightMedium"
    android:padding="@dimen/dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/radioBtn"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginLarge"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/headerLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            fontPath="fonts/Roboto-Regular.ttf"
            android:text="Sales cube"
            android:textColor="#727272"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/descriptionLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            fontPath="fonts/Roboto-Regular.ttf"
            android:text="Test connection"
            android:textColor="#727272"
            android:textSize="@dimen/textExtraSmall" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/marginLarge"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"/>
</RelativeLayout>