<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeightLarge">

    <ImageView
        android:id="@+id/reportImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/graph_table_xxhdpi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/reportImg"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportImg"
            android:layout_marginTop="@dimen/marginSmall"
            android:text="Header"
            fontPath="fonts/Roboto-Medium.ttf"
            android:textSize="@dimen/largeText"
            android:textColor="#8F8F8F"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/descriptionLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportImg"
            android:layout_below="@+id/headerLbl"
            android:text="Description"
            fontPath="fonts/Roboto-Thin.ttf"
            android:textSize="@dimen/mediumText"
            android:textColor="#8F8F8F"
            android:ellipsize="end"/>
    </LinearLayout>

</RelativeLayout>