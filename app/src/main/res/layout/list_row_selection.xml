<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLyt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeightMedium"
    android:background="@drawable/rectangular_white_bgd"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp"
        android:background="#D4D4D4"/>

    <View
        android:id="@+id/headerColor"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@drawable/stripe_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="@dimen/marginExtraSmall"
        android:layout_toRightOf="@id/headerColor"
        android:layout_toLeftOf="@+id/removeItemImg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entityTitleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            fontPath="fonts/Roboto-Regular.ttf"
            android:text="Year level"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/entityDescLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            fontPath="fonts/Roboto-Regular.ttf"
            android:text="Time hierarchy"
            android:textColor="#999999"
            android:textSize="@dimen/smallText"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/removeItemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginLarge"
        android:padding="@dimen/paddingExtraSmall"
        android:src="@drawable/cancel_xxhdpi"
        android:background="@drawable/btnbgd_none" />

</RelativeLayout>